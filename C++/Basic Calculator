#include <iostream>

using std::cout;
using std::cin;
using std::endl;

int main()
{
    double num1 = 0; /* the first number*/
    char oper; /* the operator*/
    double num2 = 0; /* the second number*/

    cout << "Please input the first number:" << endl;
    cin >> num1;
    cout << "Please input an operator ( + - * / ):" << endl;
    cin >> oper;
    cout << "Please input the second number:" << endl;
    cin >> num2;

    if (oper == '+') /* plus condition */
    {
        cout << "The result is " << num1 + num2 << endl;
    }
    else if (oper == '-') /* minus condition */
    {
        cout << "The result is " << num1 - num2 << endl;
    }
    else if (oper == '*') /* multiply condition */
    {
        cout << "The result is " << num1 * num2 << endl;
    }
    else if (oper == '/') /* divide condition */
    {
        cout << "The result is " << num1 / num2 << endl;
    }
    else /* invalid input condition */
    {
        cout << "Unvalid input" << endl;
    }
}

